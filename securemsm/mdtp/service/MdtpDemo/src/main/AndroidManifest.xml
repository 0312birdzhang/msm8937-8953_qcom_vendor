<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qualcomm.qti.securemsm.mdtp.MdtpDemo"
    android:sharedUserId="android.uid.system" >

    <uses-sdk android:minSdkVersion="18"
          android:targetSdkVersion="23"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.qualcomm.qti.securemsm.mdtp.MdtpDemo.MainUserActivity"
            android:label="@string/user_app" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.qualcomm.qti.securemsm.mdtp.MdtpDemo.ConfigurationActivity"
            android:label="@string/config_app"
            android:parentActivityName="com.qualcomm.qti.securemsm.mdtp.MdtpDemo.MainUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualcomm.qti.securemsm.mdtp.MdtpDemo.MainUserActivity" />
        </activity>
        <activity
            android:name="com.qualcomm.qti.securemsm.mdtp.MdtpDemo.ServerActivity"
            android:label="@string/server_app"
            android:parentActivityName="com.qualcomm.qti.securemsm.mdtp.MdtpDemo.MainUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.qualcomm.qti.securemsm.mdtp.MdtpDemo.MainUserActivity" />
        </activity>

        <activity
            android:name="com.qualcomm.qti.securemsm.mdtp.MdtpDemo.SetupWizardActivity"
            android:label="@string/wizard_app_loading_title"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:excludeFromRecents="true" android:immersive="true">
            <intent-filter android:priority="5">
                <action android:name="android.intent.action.MAIN" />
                <!-- Uncomment this section for enabling the SetupWizardActivity -->
                <!--
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                -->
            </intent-filter>
        </activity>

    </application>

</manifest>
